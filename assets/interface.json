{
    // 本文件主要定义了通用 UI 的行为和显示内容
    // 可参考文档和示例添加更多您需要的功能
    // 文档：https://maafw.xyz/docs/3.3-ProjectInterfaceV2
    // 示例：https://github.com/MaaXYZ/MaaFramework/blob/main/sample/interface.json
    "interface_version": 2,
    "name": "MAKBBS",
    "description": "适用于 战双及鸣潮 每日签到的 库街区 小助手",
    "license": "MIT",
    "welcome": "欢迎使用MAKBBS!",
    // 填写项目地址和版本号可实现自动更新功能
    "github": "https://github.com/akuraito/MaaAssistantKuroBBS",
    "version": "1.0.0",
    // Mirror酱为第三方分发服务，新项目默认关闭
    // 若有需要请联系 Mirror酱 开通，直接自行开启是无法使用的
    // "mirrorchyan_rid": "MaaXXX",
    // "mirrorchyan_multiplatform": true,
    "controller": [
        {
            "name": "安卓端",
            "type": "Adb",
            "display_short_side": 720 // 默认缩放分辨率的短边长度
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "./resource"
            ]
        }
    ],
    // 可选的 agent 示例
    // "agent": {
    //     "child_exec": "python",
    //     "child_args": [
    //         "./agent/main.py"
    //     ]
    // },
    "task": [
        {
            "name": "库街区签到",
            "entry": "KuroBBSEntrance",
            "option": [
                "库街区签到游戏",
                "退出库街区"
            ]
        },
        {
            "name": "TapTap 签到",
            "entry": "Taptap",
            "description": "此功能**不能使用礼包码**，请在礼包码过期前手动兑换。",
            "option": [
                "TapTap 签到游戏",
                "退出 TapTap"
            ]
        }
    ],
    "option": {
        "退出库街区": {
            "type": "switch",
            "default_case": "No",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "StopAPPKuroBBS": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "StopAPPKuroBBS": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "库街区签到游戏": {
            "type": "select",
            "default_case": "战双帕弥什",
            "cases": [
                {
                    "name": "战双帕弥什"
                },
                {
                    "name": "鸣潮",
                    "pipeline_override": {
                        "KuroBBSEntrance": {
                            "next": ["MC"]
                        }
                    }
                }
            ]
        },
        "退出 TapTap": {
            "type": "switch",
            "description": "在完成任务后关闭 TapTap，使用复数此任务时，此选项需开启。",
            "default_case": "Yes",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "StopAPPTaptap": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "StopAPPTaptap": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "TapTap 签到游戏": {
            "type": "select",
            "default_case": "战双帕弥什",
            "cases": [
                {
                    "name": "战双帕弥什"
                },
                {
                    "name": "鸣潮",
                    "pipeline_override": {
                        "TapSearchInput": {
                            "action": {
                                "param": {
                                    "input_text": "鸣潮"
                                }
                            }
                        },
                        "TapSearch": {
                            "recognition": {
                                "param": {
                                    "all_of": [
                                        {
                                            "recognition": "OCR",
                                            "expected": ["搜索"],
                                            "roi": [500,70,100,50]
                                        },
                                        {
                                            "recognition": "OCR",
                                            "expected": ["鸣潮"],
                                            "roi": [100,70,380,50]
                                        }
                                    ]
                                }
                            }
                        },
                        "TapSearchResoult": {
                            "recognition": {
                                "param": {
                                    "expected": ["鸣潮"]
                                }
                            }
                        },
                        "TapSignDone": {
                            "recognition": {
                                "param": {
                                    "roi": [110,975,500,90]
                                }
                            }
                        }
                    }
                }
            ]
        }
    }
}