{
    // 本文件主要定义了通用 UI 的行为和显示内容
    // 可参考文档和示例添加更多您需要的功能
    // 文档：https://maafw.xyz/docs/3.3-ProjectInterfaceV2
    // 示例：https://github.com/MaaXYZ/MaaFramework/blob/main/sample/interface.json
    "interface_version": 2,
    "name": "MAKBBS",
    "description": "适用于 战双及鸣潮 每日签到的 库街区 小助手",
    "license": "MIT",
    "welcome": "欢迎使用MAKBBS!",
    // 填写项目地址和版本号可实现自动更新功能
    "github": "https://github.com/akuraito/MaaAssistantKuroBBS",
    "version": "1.0.0",
    // Mirror酱为第三方分发服务，新项目默认关闭
    // 若有需要请联系 Mirror酱 开通，直接自行开启是无法使用的
    // "mirrorchyan_rid": "MaaXXX",
    // "mirrorchyan_multiplatform": true,
    "controller": [
        {
            "name": "安卓端",
            "type": "Adb",
            "display_short_side": 720 // 默认缩放分辨率的短边长度
        }
    ],
    "resource": [
        {
            "name": "库街区",
            "path": [
                "./resource"
            ]
        }
    ],
    // 可选的 agent 示例
    // "agent": {
    //     "child_exec": "python",
    //     "child_args": [
    //         "./agent/main.py"
    //     ]
    // },
    "task": [
        {
            "name": "战双帕弥什每日签到",
            "entry": "PNS"
        },
        {
            "name": "鸣潮每日签到",
            "entry": "MC"
        },
        {
            "name": "退出库街区",
            "entry": "StopAPPKuroBBS"
        },
        {
            "name": "战双帕弥什TapTap签到",
            "entry": "Taptap",
            "description": "本功能仅能领取礼包码，本功能**不能使用礼包码**，请在礼包码过期前手动兑换",
            "option": ["退出TapTap"]
        }
    ],
    "option": {
        "退出TapTap": {
            "type": "switch",
            "default_case": "No",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "StopAPPTaptap": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "StopAPPTaptap": {
                            "enabled": false
                        }
                    }
                }
            ]
        }
    }
}